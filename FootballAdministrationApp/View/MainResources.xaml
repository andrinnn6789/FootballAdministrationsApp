<!-- Dictionary1.xaml -->
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="NormalText">
        <Setter Property="TextBlock.Background" Value="White"/>
        <Setter Property="TextBlock.Margin" Value="10,10,10,0"/>
    </Style>

    <Style x:Key="NormalListBox">
        <Setter Property="ListBox.Background" Value="Lavender"/>
        <Setter Property="ListBox.Margin" Value="10,0,10,0"/>
        <Setter Property="ListBox.BorderThickness" Value="2"/>
        <Setter Property="ListBox.BorderBrush" Value="LightSlateGray"/>
    </Style>

    <Style x:Key="NormalButton">
        <Setter Property="Button.Margin" Value="15,5,15,5"/>
        <Setter Property="Button.Background" Value="Lavender"/>
        <Setter Property="Button.BorderBrush" Value="LightSlateGray"/>
        <Setter Property="Button.BorderThickness" Value="4"/>
    </Style>

    <Style x:Key="NormalTextBox">
        <Setter Property="TextBox.Background" Value="Lavender"/>
        <Setter Property="TextBox.Margin" Value="10,0,15,0"/>
        <Setter Property="TextBox.BorderThickness" Value="2"/>
        <Setter Property="TextBox.BorderBrush" Value="LightSlateGray"/>
        <Setter Property="TextBox.FontSize" Value="15"/>
    </Style>

</ResourceDictionary>